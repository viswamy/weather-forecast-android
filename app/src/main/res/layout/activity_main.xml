<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_image"
    android:fitsSystemWindows="true"
    tools:context="com.google.vswamy.weather_forecast_android.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:id="@+id/forecast_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:text="Forecast Search"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:id="@+id/tr1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/forecast_search"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/street"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:paddingLeft="0dp"
                android:paddingTop="30dp"
                android:text="Street"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/street_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:inputType="text" />
        </TableRow>


        <TableRow
            android:id="@+id/tr2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/forecast_search"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/city"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:paddingLeft="0dp"
                android:paddingTop="30dp"
                android:text="City"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/city_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:inputType="text" />
        </TableRow>


        <TableRow
            android:id="@+id/tr3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/forecast_search"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/state"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:paddingLeft="0dp"
                android:paddingTop="30dp"
                android:text="State"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/planets_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/states_array"/>

        </TableRow>


        <TableRow
            android:id="@+id/tr4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/forecast_search"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/degree"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:paddingLeft="0dp"
                android:paddingTop="30dp"
                android:text="Degree"
                android:textColor="@android:color/black"
                android:textSize="25dp" />


            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/celsius" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fahrenheit" />
            </RadioGroup>
        </TableRow>


        <TableRow
            android:id="@+id/tr5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/forecast_search"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/search"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Search"
                />
            <Button
                android:id="@+id/clear"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Clear"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tr6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/forecast_search"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/error_message"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:paddingLeft="0dp"
                android:paddingTop="30dp"
                android:text="State"
                android:visibility="invisible"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tr7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/forecast_search"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

        <Button
            android:id="@+id/about"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="About"
            />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
        />
    </TableRow>


    </TableLayout>
</RelativeLayout>
